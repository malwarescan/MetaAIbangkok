{
  "name": "php-version",
  "version": "1.0.0",
  "description": "A complete transformation of the MetaEsthAI application from React/Node.js to PHP with Preline.co design components.",
  "main": "index.js",
  "scripts": {
    "dev": "tailwindcss -i ./assets/css/app.css -o ./public/css/app.css --watch",
    "build": "tailwindcss -i ./assets/css/app.css -o ./public/css/app.css --minify",
    "prettier": "prettier -w \"**/*.{html,js,ts,css}\"",
    "eslint": "eslint \"**/*.{js,ts}\" --fix",
    "stylelint": "stylelint \"**/*.css\" --fix",
    "build:css": "tailwindcss -i ./assets/css/app.css -o ./public/css/app.css --minify",
    "purge": "purgecss --config scripts/purgecss.config.cjs -o ./public/css/",
    "audit:classes": "node scripts/class_audit_fix.js",
    "fix:all": "npm run audit:classes && npm run prettier && npm run eslint && npm run stylelint && npm run build:css && npm run purge"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@tailwindcss/forms": "^0.5.10",
    "eslint": "^9.37.0",
    "fast-glob": "^3.3.3",
    "micromatch": "^4.0.8",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "preline": "^3.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "purgecss": "^7.0.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.14"
  }
}
